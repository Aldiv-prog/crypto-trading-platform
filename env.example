# Environment Configuration Template
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control (it contains secrets)

# ============================================================================
# PROJECT SETTINGS
# ============================================================================

# Project name
PROJECT_NAME=GridTradingBot

# Environment: development, staging, production
ENVIRONMENT=development

# Debug mode (true/false)
DEBUG=true

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ============================================================================
# TRADING EXCHANGE SETTINGS
# ============================================================================

# Exchange API keys (Binance, Kraken, Coinbase, etc.)
EXCHANGE_NAME=binance
EXCHANGE_API_KEY=your_api_key_here
EXCHANGE_API_SECRET=your_api_secret_here

# Testnet/Paper trading (true/false) - RECOMMENDED for testing
USE_TESTNET=true

# ============================================================================
# STRATEGY CONFIGURATION
# ============================================================================

# Trading pair (e.g., BTCUSDT, ETHUSDT)
TRADING_PAIR=BTCUSDT

# Trade type: LONG, SHORT, or BOTH
TRADE_TYPE=LONG

# Grid trading parameters
GRID_SPACING_PERCENT=0.5
GRID_LEVELS=5
INITIAL_POSITION_SIZE=100
TAKE_PROFIT_PERCENT=5.0
MAX_DRAWDOWN_PERCENT=8.0

# Position sizing
MAX_POSITION_SIZE_PERCENT=20.0
INITIAL_ORDER_VOLUME=0.02

# ============================================================================
# ADAPTIVE VOLATILITY SETTINGS
# ============================================================================

# Enable adaptive scaling (true/false)
ADAPTIVE_ENABLED=true

# Volatility thresholds
LOW_VOLATILITY_THRESHOLD=1.0
HIGH_VOLATILITY_THRESHOLD=5.0

# Scaling limits (0.4 to 2.5 recommended)
MIN_SCALING_FACTOR=0.4
MAX_SCALING_FACTOR=2.5

# Volatility measure weights (should sum to 1.0)
BOLLINGER_WEIGHT=0.25
GARMAN_KLASS_WEIGHT=0.25
ATR_WEIGHT=0.25
EWMA_WEIGHT=0.25

# ============================================================================
# BACKTEST SETTINGS
# ============================================================================

# Backtest date range
BACKTEST_START_DATE=2023-01-01
BACKTEST_END_DATE=2024-12-31

# Initial capital for backtest
INITIAL_BALANCE=10000

# Trading fees
MAKER_FEE=0.1
TAKER_FEE=0.1
SLIPPAGE_PERCENT=0.05

# Candle timeframe (1m, 5m, 15m, 1h, 4h, 1d)
CANDLE_TIMEFRAME=1h

# ============================================================================
# LIVE TRADING SETTINGS
# ============================================================================

# Live trading enabled (true/false) - BE CAREFUL!
LIVE_TRADING_ENABLED=false

# Risk management
MAX_DAILY_LOSS_PERCENT=2.0
MAX_POSITIONS=3

# Notification settings
SEND_NOTIFICATIONS=true
NOTIFICATION_EMAIL=your_email@example.com

# ============================================================================
# OPTIMIZATION SETTINGS
# ============================================================================

# Parameter optimization
OPTIMIZE_PARAMETERS=false
OPTIMIZATION_METRIC=sharpe_ratio  # sharpe_ratio, profit_factor, max_drawdown

# Grid search range
GRID_SPACING_MIN=0.3
GRID_SPACING_MAX=1.0
GRID_SPACING_STEP=0.1

TAKE_PROFIT_MIN=3.0
TAKE_PROFIT_MAX=10.0
TAKE_PROFIT_STEP=1.0

# ============================================================================
# DATA SETTINGS
# ============================================================================

# Data source
DATA_SOURCE=binance  # binance, kraken, csv_file

# CSV file path (if using CSV)
CSV_DATA_PATH=data/market_data.csv

# Data cache directory
DATA_CACHE_DIR=data/cache

# ============================================================================
# VISUALIZATION SETTINGS
# ============================================================================

# Generate plots
GENERATE_PLOTS=true

# Plot output directory
PLOTS_DIR=results/plots

# ============================================================================
# LOGGING & OUTPUT
# ============================================================================

# Log file path
LOG_FILE=logs/trading.log

# Results export directory
RESULTS_DIR=results/backtest

# Export format: json, csv, both
EXPORT_FORMAT=json

# ============================================================================
# ADVANCED SETTINGS
# ============================================================================

# Maximum retries for API calls
MAX_RETRIES=3

# Timeout for API calls (seconds)
API_TIMEOUT=30

# Rate limiting (requests per minute)
API_RATE_LIMIT=1200

# Timezone for timestamps
TIMEZONE=UTC

# ============================================================================
# NOTES
# ============================================================================

# For LIVE TRADING:
# 1. Set USE_TESTNET=false
# 2. Set LIVE_TRADING_ENABLED=true
# 3. Add real API keys
# 4. Start with small position sizes
# 5. Monitor closely!

# For BACKTESTING:
# 1. Set USE_TESTNET=true (doesn't matter for backtest)
# 2. Set LIVE_TRADING_ENABLED=false
# 3. Set BACKTEST_START_DATE and BACKTEST_END_DATE
# 4. Set INITIAL_BALANCE
